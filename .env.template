# h-bot Configuration
# Copy to .env and fill in your values: cp .env.template .env

# Core MCP Server
MCP_SERVER_PORT=8083
MCP_SERVER_HOST=0.0.0.0

# Redis Queue
REDIS_URL=redis://redis:6379

# SSH Keys Directory (override to use keys from a different path)
SSH_KEYS_DIR=./ssh-keys

# Optional: Claude Code integration
# CLAUDE_CODE_CONTAINER=h-bot-claude

# Optional: h-ai expert mode
# H_AI_EXPERT_URL=http://192.168.178.100:11434
# H_AI_EXPERT_ENABLED=false

# Telegram Client
TELEGRAM_BOT_TOKEN=your-bot-token-here

# Logging
LOG_LEVEL=INFO

# Security
MAX_CONCURRENT_TASKS=3
TASK_TIMEOUT=300
ALLOWED_CHATS=

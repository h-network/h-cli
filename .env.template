# h-bot Configuration
# Copy to .env and fill in your values: cp .env.template .env

# Core MCP Server
MCP_SERVER_PORT=8083
MCP_SERVER_HOST=0.0.0.0

# Redis Queue
REDIS_URL=redis://redis:6379

# SSH Keys Directory (override to use keys from a different path)
SSH_KEYS_DIR=./ssh-keys

# Claude Code integration (required for natural language mode)
# Get this via: claude setup-token (run interactively once)
ANTHROPIC_AUTH_TOKEN=your-auth-token-here

# Telegram Client
TELEGRAM_BOT_TOKEN=your-bot-token-here

# Logging
LOG_LEVEL=INFO

# Security
MAX_CONCURRENT_TASKS=3
TASK_TIMEOUT=300
ALLOWED_CHATS=
